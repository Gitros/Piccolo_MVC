@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Position" class="form-control border-0 shadow" />
                    <label asp-for="Product.Position" class="ms-2"></label>
                    <span asp-validation-for="Product.Position" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Ingredients" class="form-control border-0 shadow" />
                    <label asp-for="Product.Ingredients" class="ms-2"></label>
                    <span asp-validation-for="Product.Ingredients" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.PriceSmall" class="form-control border-0 shadow" />
                    <label asp-for="Product.PriceSmall" class="ms-2"></label>
                    <span asp-validation-for="Product.PriceSmall" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.PriceBig" class="form-control border-0 shadow" />
                    <label asp-for="Product.PriceBig" class="ms-2"></label>
                    <span asp-validation-for="Product.PriceBig" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-2"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Product.ProductTypeId" asp-items="@Model.ProductTypeList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Type--</option>
                    </select>
                    <label asp-for="Product.ProductTypeId" class="ms-2"></label>
                    <span asp-validation-for="Product.ProductTypeId" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}